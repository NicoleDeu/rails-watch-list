<div class="container">
<h1><%= cl_image_tag @list.photo.key, width: 150, height: 150, crop: :thumb %><%=@list.name%></h1>

<% @list.movies.each do |m|%>
<div class="card-product">
  <img src="<%= m.poster_url %>" />
  <div class="card-product-infos">
    <h2><%= m.title %></h2>
    <p><%= m.overview %></p>
  </div>
</div>
<%end%>

</div>
